@model IEnumerable<string>

<a class="btn btn-block btn-default" asp-action="List" asp-controller="Product" asp-route-category="">Home</a>
@foreach (string category in Model)
{
    <a class="btn btn-block
       @(category == ViewBag.SelectedCategory ? "btn-success":"btn-default")"
       asp-action="List"
       asp-controller="Product"
       asp-route-category="@category"
       asp-route-productPage="1">@category</a>
}
