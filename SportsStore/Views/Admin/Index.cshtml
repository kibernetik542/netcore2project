@model IEnumerable<Product>

@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-responsive table-bordered">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-right">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ProductId</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Price.ToString("C")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-default" asp-route-productId="@item.ProductId">
                        <i class="fa fa-pencil-square-o text-warning"></i>&nbsp;Edit
                    </a>
                    <input type="hidden" name="ProductId" value="@item.ProductId" />
                    <button type="submit" class="btn btn-sm btn-default">
                        <i class="fa fa-times text-danger"></i>&nbsp;Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-default">
        <i class="fa fa-plus text-success"></i>&nbsp;Add Product
    </a>
</div>